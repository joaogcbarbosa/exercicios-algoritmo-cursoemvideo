Algoritmo "84"

Var

   vetNome: vetor[1..9] de caractere
   vetIdade: vetor[1..9] de inteiro
   i, idade: inteiro
   nome: caractere

Inicio

      para i <- 1 até 4 faça
           EscrevaL(i,"ª PESSOA")
           Escreva("Nome: ")
           Leia(nome)
           vetNome[i] <- nome
           Escreva("Idade: ")
           Leia(idade)
           vetIdade[i] <- idade
      fimpara
      
      EscrevaL("Menores de 18:")
      para i <- 1 até 9 faça
           se (vetIdade[i] < 18) entao
              EscrevaL(vetNome[i],",",vetIdade[i]," anos")
           fimse
      fimpara
      

Fimalgoritmo